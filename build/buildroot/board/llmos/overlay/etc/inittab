# LLM OS Micro — busybox inittab

# Startup
::sysinit:/bin/mount -t proc proc /proc
::sysinit:/bin/mount -o remount,rw /
::sysinit:/bin/mkdir -p /dev/pts /dev/shm /var/run /var/log
::sysinit:/bin/mount -a
::sysinit:/sbin/syslogd
::sysinit:/sbin/klogd

# Init scripts
::sysinit:/etc/init.d/S40network start
::sysinit:/etc/init.d/S50dropbear start
::sysinit:/etc/init.d/S99llmos start

# Console — auto-login to LLM OS status screen
tty1::respawn:/sbin/getty -n -l /usr/local/bin/llmos-login 0 tty1

# Serial console (Proxmox qm terminal / Hyper-V)
ttyS0::respawn:/sbin/getty -L ttyS0 115200 vt100

# Shutdown
::shutdown:/etc/init.d/S99llmos stop
::shutdown:/etc/init.d/S50dropbear stop
::shutdown:/etc/init.d/S40network stop
::shutdown:/bin/umount -a -r
::shutdown:/sbin/swapoff -a
